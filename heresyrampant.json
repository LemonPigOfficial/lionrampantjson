            {
                "name": "Aggressive",
                "definition": "Each turn, one unit within 12” of your Leader’s unit may automatically pass an Attack activation without needing to roll dice (may be used on the Leader’s own unit).",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Psyker or Chaplain",
                "definition": "You may reroll any one set of dice in the game in its entirety, rolled by any player.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Veteran",
                "definition": "Same as the Veteran rule. Applies only to the Leader's unit and cannot be purchased if the unit already has this rule.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Champion",
                "definition": "In Challenges, the Leader is only hit on a 6, and treats the opposing Leader's armor as if it was 1.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Brutal",
                "definition": "Any unit within 12\" of your Leader's unit may automatically pass a failed Rally test by removing 1 model (the very real threat of enforced sacrifice really does make a warrior much bolder).",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Commanding",
                "definition": "Each turn, you may reroll 1 additional failed Move, Attack, or Shoot activation test (no other tests) within 12\" of your Leader's unit (meaning you have 2 rerolls each turn).",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Courageous",
                "definition": "The Leader's unit may reroll each of its Courage tests once.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Drunkard or Eccentric",
                "definition": "When this Leader is good, they're very good, and when they're bad... After deployment but before the first turn, roll to see how much they've drunk. On a 1-3, the Leader drank too much and cannot be ordered on the first turn. On a 4-6, the Leader gains Warmaster.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Fearless",
                "definition": "Leader's unit is not affected by Fearsome or Panic enemy units.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Fearsome",
                "definition": "Same as the Fearsome rule. Applies only to the Leader's unit and cannot be purchased if the unit already has this rule.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Impulsive",
                "definition": "Each turn, one unit within 12\" of your Leader's unit may automatically pass a Move activation without needing to roll dice (may be used on the Leader's own unit).",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Mortifactor",
                "definition": "Vehicles within 12\" of the Leader's unit always count as being in cover.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Inspired",
                "definition": "Each turn, you may reroll 2 additional failed Move, Attack, or Shoot activations tests (no other tests) within 12\" of your Leader's unit (meaning you have 3 rerolls each turn.)",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Unflinching",
                "definition": "When required to Retreat, the Leader's unit retreats only 1\".",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Indomitable",
                "definition": "During Attacks, the Leader's unit may reroll up to 2 failed hit dice.",
                "factions": [],
                "decreaseModelCount": 1
            },
            {
                "name": "Patient",
                "definition": "Each turn, one unit within 12\" of your Leader's unit may choose to ignore a Wild Charge activation (may be used on the Leader's own unit).",
