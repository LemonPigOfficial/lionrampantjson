        "upgrades": [
            {
                "name": "Fearsome",
                "definition": "A Fearsome unit creates panic in its opponents through reputation, deed, or other psychological means. Courage tests caused as a result of this unit Attacking (but not Shooting) suffer an additional -1 to the total. Should two Fearsome units encounter one another, the effect of this rule is cancelled between those units"
            },
            {
                "name": "Bayonets",
                "definition": "A unit with bayonets may form a Pike Formation - despite not exactly having Pikes.",
                "specialRules": [
                    "Pike Formation"
                ]
            },
            {
                "name": "Bloodthirsty",
                "definition": " Whether it be due to superior training, better equipment, carrying a second weapon, religious fervour, or just a large helping of plain ol’ nastiness, a Bloodthirsty unit can inflict a whole load of additional pain on an enemy – if it rolls well. Any Attack dice (but not Defence or Shooting dice) that roll a 6 cause 2 hits rather than the usual 1 hit"
            },
            {
                "name": "Mounted Bows",
                "definition": "For Elite Cavalry: Wild Charge and Counter-charge are removed and replaced with Shoot 6+/Range 12” with a Shoot Value of 5+. For Heavy Cavalry: Add Shoot 6+/Range 12” with a Shoot Value of 5+."
            },
            {
                "name": "Mounted Crossbows",
                "definition": "Counter-charge is removed and replaced with Shoot 7+/Range 12” with a Shoot Value of 5+. Attack Value is reduced to 5+."
            },
            {
                "name": "Drilled",
                "definition": "This unit is better controlled than most hot-headed Elite Cavalry and removes Wild Charge"
            },
